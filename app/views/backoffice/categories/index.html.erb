<h1 class="page-header">Categorias</h1>
<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>
<div class="panel panel-default">
  <div class="panel-heading">
    Listando categorias
    <%= link_to new_backoffice_category_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Descrição</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category|  %>
            <tr>
             <td><%= category.id %></td>
             <td><%= category.description %></td>
             <td style="width: 85px">
              <%= link_to edit_backoffice_category_path(category), class:"btn btn-primary btn-circle" do %>
                <i class="fa fa-list"></i>
              <% end %>
              <%= link_to backoffice_categories_path, class:"btn btn-danger btn-circle", disabled:"true" do %>
                <i class="fa fa-times"></i>
              <% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @categories, window: 2 %>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>