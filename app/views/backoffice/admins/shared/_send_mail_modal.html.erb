<div class="modal fade" id="sendMailModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_tag(backoffice_send_mail_index_path, remote: true) do %>
          <div class="form-group">
            <label for="recipient-name" class="form-control-label">Destinat√°rio:</label>
            <%= text_field_tag :'recipient-name', nil, class:"form-control", disabled:"disabled" %>
          </div>
          <div class="form-group">
            <label for="subject-text" class="form-control-label">Assunto:</label>
            <%= text_field_tag :'subject-text', nil, class:"form-control", required: "required" %>
          </div>

          <div class="form-group">
            <label for="message-text" class="form-control-label">Mensagem:</label>
            <%= text_area_tag :'message-text', nil, class: 'form-control', required: "required" %>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= submit_tag "Enviar Mensagem", class:"btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>