<h1 class="page-header">Adminstradores</h1>
<% if @admin.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <ul>
      <% @admin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="panel panel-default">
  <div class="panel-heading">
   <%= action %>
 </div>
 <div class="panel-body">
  <%= form_for([:backoffice, @admin]) do |f| %>
    <div class="form-group">
      <label>Nome</label>
      <%= f.text_field :name, placeholder:"Digite o seu nome", class:"form-control"%>
      <label>E-mail</label>
      <%= f.text_field :email, placeholder:"Digite o seu email", class:"form-control"%>

      <label>Senha</label>
      <%= f.password_field :password, placeholder:"Digite a senha", class:"form-control"%>
      <label>Confirme a senha</label>
      <%= f.password_field :password_confirmation, placeholder:"Digite a senha novamente", class:"form-control"%>
      </br>
      <div class="form-group">
        <label>Tipo de Acesso</label>
        <%= f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b| %>
          <div class="radio">
            <%= b.label {b.radio_button + b.text} %>
          </div>
        <% end %>
      </div>
    </div>
    <button type="submit" class="btn btn-default">Salvar</button>
  <% end %>
</div>
</div>
