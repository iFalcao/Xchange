<h1 class="page-header">Administradores</h1>
<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>
<div class="panel panel-default">
  <div class="panel-heading">
    Listando adminstradores
    <%= link_to new_backoffice_admin_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <% @admins.each do |admin|  %>
            <tr>
             <td><%= admin.id %></td>
             <td><%= admin.email %></td>
             <td style="width: 85px">
              <%= link_to edit_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do %>
                <i class="fa fa-list"></i>
              <% end %>
              <% if  current_admin.email != admin.email %>
                <%= link_to backoffice_admin_path(admin), method: "delete", data: {confirm: "Deseja excluir o adminstrador (#{admin.email})"}, class:"btn btn-danger btn-circle" do %>
                  <i class="fa fa-times"></i>
                <% end %></td>
              <% else %>
                <%= link_to '#', class:"btn btn-danger btn-circle", disabled:"disabled" do %>
                  <i class="fa fa-times"></i>
                <% end %></td>  
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>